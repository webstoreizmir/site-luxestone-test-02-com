---
interface Props {
  headline: string;
  subheadline: string;
  ctaButtonText: string;
  imageKeyword: string;
}

const { headline, subheadline, ctaButtonText, imageKeyword } = Astro.props;
// Daha geniş ve sinematik görsel isteyelim
const bgImage = `https://image.pollinations.ai/prompt/cinematic wide shot of ${encodeURIComponent(imageKeyword)}, 8k resolution, ultra realistic, dramatic lighting?width=1920&height=1080&nologo=true&model=flux`;
---

<section id="hero" class="relative min-h-[90vh] flex items-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src={bgImage} 
      alt="Hero Background" 
      class="w-full h-full object-cover transition-transform duration-[20s] hover:scale-110"
    />
    <!-- Gelişmiş Gradient Overlay (Yazı her zaman okunur) -->
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/60 to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent"></div>
  </div>
  
  <!-- Content -->
  <div class="container-custom relative z-10 w-full pt-20">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white/90 text-sm font-medium mb-8 animate-fade-in">
        <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
        Profesyonel Çözümler
      </div>

      <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-bold mb-8 text-white leading-[1.1] tracking-tight drop-shadow-lg">
        {headline}
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-200 mb-10 font-body leading-relaxed max-w-2xl text-shadow">
        {subheadline}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="#contact" class="btn-primary group">
          {ctaButtonText}
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
        </a>
        <a href="#about" class="btn-secondary !bg-white/10 !text-white !border-white/20 hover:!bg-white/20 backdrop-blur-md">
          Daha Fazla Bilgi
        </a>
      </div>
    </div>
  </div>
</section>