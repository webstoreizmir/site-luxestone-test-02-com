---
interface Testimonial {
  name: string;
  role: string;
  comment: string;
}
interface Props {
  testimonials: Testimonial[];
}
const { testimonials } = Astro.props;
---
<section class="py-24 bg-primary/5 relative">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16"><h2 class="text-4xl font-heading font-bold text-text">Referanslar</h2></div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((t) => (
        <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700">
          <h4 class="font-bold text-text">{t.name}</h4>
          <p class="text-sm text-text/60 mb-4">{t.role}</p>
          <p class="text-text/80 italic">"{t.comment}"</p>
        </div>
      ))}
    </div>
  </div>
</section>