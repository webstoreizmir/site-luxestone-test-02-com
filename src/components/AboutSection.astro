---
interface Stat {
  label: string;
  value: string;
}
interface Props {
  title: string;
  description: string;
  stats: Stat[];
  imageKeyword: string;
}
const { title, description, stats, imageKeyword } = Astro.props;
const imgUrl = `https://image.pollinations.ai/prompt/${encodeURIComponent(imageKeyword + ' professional photo')}?width=800&height=1000&nologo=true`;
---
<section id="about" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center gap-16">
      <div class="w-full md:w-1/2 relative">
        <img src={imgUrl} alt="About Us" class="relative rounded-2xl shadow-2xl w-full object-cover h-[500px] hover:scale-[1.01] transition-transform duration-500"/>
      </div>
      <div class="w-full md:w-1/2">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6 text-text">{title}</h2>
        <p class="text-lg text-text/80 leading-relaxed font-body mb-8">{description}</p>
        <div class="grid grid-cols-2 gap-6 mb-8">
          {stats.map(stat => (
            <div class="p-4 rounded-lg bg-gray-50 dark:bg-white/5 border border-gray-100 dark:border-white/10">
              <p class="text-3xl font-bold text-primary mb-1">{stat.value}</p>
              <p class="text-sm text-text/70">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>