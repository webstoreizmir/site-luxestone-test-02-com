---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import HeroSection from '../components/HeroSection.astro';
import AboutSection from '../components/AboutSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import ProcessSection from '../components/ProcessSection.astro'; // YENİ
import TestimonialsSection from '../components/TestimonialsSection.astro';
import FAQSection from '../components/FAQSection.astro'; // YENİ
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';

import type { SiteConfig } from '../types/config';
import siteConfig from '../data/site-config.json';

const config = siteConfig as SiteConfig;
---

<Layout title={config.metadata.title} description={config.metadata.description}>
  <Navbar title={config.metadata.title} />
  
  <HeroSection 
    headline={config.content.hero.headline}
    subheadline={config.content.hero.subheadline}
    ctaButtonText={config.content.hero.ctaButtonText}
    imageKeyword={config.images.hero_keyword}
  />
  
  <AboutSection 
    title={config.content.about.title}
    description={config.content.about.description}
    stats={config.content.about.stats}
    imageKeyword={config.images.about_keyword}
  />

  <ServicesSection 
    services={config.content.services} 
    featureKeywords={config.images.feature_keywords}
  />

  <!-- Yeni Süreç Bölümü -->
  <ProcessSection steps={config.content.process} />
  
  <TestimonialsSection testimonials={config.content.testimonials} />
  
  <!-- Yeni SSS Bölümü -->
  <FAQSection faqs={config.content.faq} />
  
  <ContactSection contact={config.content.contact} />
  
  <Footer />
</Layout>